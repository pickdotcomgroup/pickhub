// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String        @id @default(cuid())
    name          String?
    email         String?       @unique
    emailVerified DateTime?
    image         String?
    password      String?       // For credentials authentication
    role          String        @default("user") // user, admin
    accounts      Account[]
    sessions      Session[]
    posts         Post[]
    projects      Project[]     // Projects posted by client
    applications  Application[] // Applications submitted by talent
    
    // Professional profiles (one-to-one relationships)
    clientProfile ClientProfile?
    talentProfile TalentProfile?
    agencyProfile AgencyProfile?
    adminProfile  AdminProfile?
    
    // Messaging relations
    clientConversations Conversation[] @relation("ClientConversations")
    talentConversations Conversation[] @relation("TalentConversations")
    sentMessages        Message[]
    
    // Notifications
    notifications Notification[]
    
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
}

// Professional Profile Models
model ClientProfile {
    id          String  @id @default(cuid())
    userId      String  @unique
    user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    firstName   String?
    lastName    String?
    companyName String?
    industry    String?
    companySize String?
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model TalentProfile {
    id         String   @id @default(cuid())
    userId     String   @unique
    user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    firstName  String
    lastName   String
    title      String
    skills     String[] // Array of skills
    experience String   // entry, intermediate, senior, expert
    hourlyRate String?
    portfolio  String?
    
    // Tier system fields
    tier                String   @default("bronze") // bronze, silver, gold
    activePicks         Int      @default(0) // Current number of active project picks
    completedProjects   Int      @default(0) // Total completed projects
    successRate         Float    @default(0.0) // Success rate (0-100)
    totalEarnings       Float    @default(0.0) // Total earnings for tier progression
    
    // Portfolio showcase
    portfolioUrl        String?  // External portfolio URL
    portfolioProjects   Json?    // JSON array of portfolio projects
    certifications      String[] @default([]) // Array of certifications
    bio                 String?  @db.Text // Professional bio
    
    // Quality Assurance & Verification
    verificationStatus  String   @default("pending") // pending, in_review, verified, rejected
    platformAccess      Boolean  @default(false) // Access granted after verification
    verification        TalentVerification? @relation("TalentVerification")
    
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

model AgencyProfile {
    id          String   @id @default(cuid())
    userId      String   @unique
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    firstName   String
    lastName    String
    agencyName  String
    description String
    teamSize    String?
    skills      String[] // Array of agency skills/services
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model AdminProfile {
    id          String   @id @default(cuid())
    userId      String   @unique
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    firstName   String
    lastName    String
    role        String   @default("master") // master, moderator
    permissions Json?    // JSON object for granular permissions
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

// Quality Assurance Framework Models
model TalentVerification {
    id                    String   @id @default(cuid())
    talentProfileId       String   @unique
    talentProfile         TalentProfile @relation("TalentVerification", fields: [talentProfileId], references: [id], onDelete: Cascade)
    
    // Portfolio Review
    portfolioReviewed     Boolean  @default(false)
    portfolioScore        Float?   // 0-100 score
    portfolioNotes        String?  @db.Text
    
    // Code Sample Analysis
    githubUsername        String?
    gitlabUsername        String?
    codeRepositoryUrl     String?
    codeSampleReviewed    Boolean  @default(false)
    codeSampleScore       Float?   // 0-100 score
    codeSampleNotes       String?  @db.Text
    
    // Skill Verification Tests
    skillTestsTaken       Json?    // Array of test results
    skillTestsScore       Float?   // Average score
    
    // Identity Verification
    linkedInUrl           String?
    linkedInVerified      Boolean  @default(false)
    identityVerified      Boolean  @default(false)
    identityDocumentType  String?  // passport, drivers_license, national_id
    identityVerifiedAt    DateTime?
    
    // Overall Verification
    overallScore          Float?   // Weighted average of all scores
    verificationDecision  String   @default("pending") // pending, approved, rejected, needs_revision
    reviewedBy            String?  // Admin user ID who reviewed
    reviewedAt            DateTime?
    rejectionReason       String?  @db.Text
    
    createdAt             DateTime @default(now())
    updatedAt             DateTime @updatedAt
    
    @@index([verificationDecision])
}

model SkillTest {
    id                String   @id @default(cuid())
    title             String
    description       String   @db.Text
    technology        String   // React, Node.js, Python, etc.
    difficulty        String   // beginner, intermediate, advanced
    duration          Int      // Duration in minutes
    passingScore      Float    // Minimum score to pass (0-100)
    
    questions         Json     // Array of questions with answers
    isActive          Boolean  @default(true)
    
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
    
    @@index([technology])
    @@index([difficulty])
}

model Project {
    id                 String        @id @default(cuid())
    title              String
    description        String        @db.Text
    budget             Float
    deadline           DateTime
    category           String
    skills             String[]      // Array of required skills
    projectType        String        @default("fixed") // fixed or hourly
    status             String        @default("open") // open, in_progress, completed, cancelled
    
    // New enhanced fields
    complexity         String?       // simple, moderate, complex
    estimatedDuration  Int?          // in days
    projectTemplate    String?       // web_app, mobile_app, api_development, etc.
    techStack          String[]      @default([]) // Technology stack
    visibility         String        @default("public") // public or invite_only
    
    // Tier-based access
    minimumTier        String        @default("bronze") // bronze, silver, gold - minimum tier required
    
    clientId     String
    client       User          @relation(fields: [clientId], references: [id], onDelete: Cascade)
    applications Application[] // Applications from talents
    
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
    
    @@index([clientId])
    @@index([status])
    @@index([category])
    @@index([minimumTier])
}

model Application {
    id          String   @id @default(cuid())
    status      String   @default("pending") // pending, accepted, rejected, withdrawn
    coverLetter String?  @db.Text
    proposedRate Float?
    
    // Pick tracking
    isPicked    Boolean  @default(false) // Whether talent has picked this project
    pickedAt    DateTime? // When the project was picked
    
    // Completion tracking
    completedAt DateTime? // When the project was completed
    clientRating Float?   // Client rating (1-5)
    clientFeedback String? @db.Text
    
    projectId   String
    project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
    
    talentId    String
    talent      User     @relation(fields: [talentId], references: [id], onDelete: Cascade)
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    
    @@unique([projectId, talentId]) // A talent can only apply once to a project
    @@index([talentId])
    @@index([projectId])
    @@index([status])
    @@index([isPicked])
}

model Conversation {
    id           String    @id @default(cuid())
    
    // Participants
    clientId     String
    client       User      @relation("ClientConversations", fields: [clientId], references: [id], onDelete: Cascade)
    
    talentId     String
    talent       User      @relation("TalentConversations", fields: [talentId], references: [id], onDelete: Cascade)
    
    // Optional: Link to a specific project
    projectId    String?
    
    // Mutual interest tracking
    mutualInterest Boolean  @default(false) // True when both parties have shown interest
    
    messages     Message[]
    
    createdAt    DateTime  @default(now())
    updatedAt    DateTime  @updatedAt
    
    @@unique([clientId, talentId, projectId]) // One conversation per client-talent-project combination
    @@index([clientId])
    @@index([talentId])
}

model Message {
    id             String       @id @default(cuid())
    content        String       @db.Text
    
    conversationId String
    conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
    
    senderId       String
    sender         User         @relation(fields: [senderId], references: [id], onDelete: Cascade)
    
    isRead         Boolean      @default(false)
    
    createdAt      DateTime     @default(now())
    updatedAt      DateTime     @updatedAt
    
    @@index([conversationId])
    @@index([senderId])
    @@index([createdAt])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Notification {
    id                   String   @id @default(cuid())
    type                 String   // project_picked, application_accepted, message_received, etc.
    title                String
    message              String   @db.Text
    isRead               Boolean  @default(false)
    
    userId               String
    user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    // Optional relations to related entities
    relatedProjectId     String?
    relatedApplicationId String?
    
    createdAt            DateTime @default(now())
    updatedAt            DateTime @updatedAt
    
    @@index([userId])
    @@index([isRead])
    @@index([createdAt])
}

model Waitlist {
    id        String   @id @default(cuid())
    email     String   @unique
    createdAt DateTime @default(now())
    
    @@index([email])
    @@index([createdAt])
}
